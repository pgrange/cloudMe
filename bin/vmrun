stopSignal=SIGUSR1

usage() {
  echo "$@" >&2
  echo "usage : $(basename $0) -c <CONTEXT> [ -f <FILE> | -m specline ] [ -G ]
  -c : specify context to run VM in. Alternative to NC_CONTEXT environment variable. Default = context.
  -g : alternative to -c. Kept for compatibility
  -f <FILE> : instanciate servers based on a configuration file. View documentation for file format.
  -m : give a vm specification (as provided to -f option)
  -G : when running VMs have a GUI for each one
  -b : background mode. Just launch VM (with -f or -m) and exit (default mode, kept for compatibility).
  -d : daemon mode. Launch VM and wait for ^C to stop and destroy all machines. Used to launch as a service.
  -h : display this help
  -v : display version and exit
  NOTE : SIGINT (or ^C) will stop all the managed VMs and will then destoy them. ${stopSignal} will stop and quit as well, but will leave the machiness in place for you to relaunch then at will (that's what the -r option is for)." >&2
  exit 1
}

stop_all() {
  vms=$(vm_running "${contextName}" "*" | cut -d ' ' -f 1 | xargs)
  log "My vms are currently : "
  for vm in ${vms} ; do
    log " - ${vm}"
  done
  for vm in ${vms} ; do
    log "shutting down ${vm}"
    vm_stop ${vm} ${contextName} $(vm_type ${vm})
  done
}

stop_and_keep_all() {
  log "I am being told to shut down."
  stop_all
  log "Good bye !"
  exit
}

stop_and_destroy_all() {
  log "I am being told to shut down and destroy all running VMs."
  stop_all
  log "removing files"
  vm_group_destroy ${contextName}
  log "Good bye !"
  exit
}

run_from_spec() {
  local confFile=$1
  local confLine
  for confLine in $(sed '/^ *$/d;s/ *#.*$//' ${confFile}) ; do
    local vmName=$(echo "${confLine}" | cut -d : -f 1)
    local vmCount=$(echo "${confLine}" | cut -d : -f 2)
    local vmType=$(echo "${confLine}" | cut -d : -f 3)
    local vmOpts=$(echo "${confLine}" | cut -d : -f 4 | tr ";" " ")
    local vmSpawned=$(vm_instantiate ${vmName} ${vmCount} ${contextName} ${vmType} "${vmOpts} ${guiOpt}")
    local vm
    local vms
    for vm in $(echo "${vmSpawned}" | tr -s '\n ' '  ') ; do
      vms="${vms} ${vm}"
    done
  done
  echo "${vms}"
}

realMe=$(readlink -e $0)
realDir=$(dirname ${realMe})
libDir=../lib
libName=cm_lib
[ -d "${realDir}/${libDir}" ]  || usage "${libDir} directory was not found in ${realDir} : Installation problem."
[ -f "${realDir}/${libDir}/${libName}" ] && . ${realDir}/${libDir}/${libName} || usage "${libName} was not found in ${realDir}/${libDir} : Installation problem."

vmName=
contextName="context"
[ -n "${NC_CONTEXT}" ] && contextName=${NC_CONTEXT}
guiOpt=
specLines=
backgroundMode=1
while getopts f:g:c:m:Gbdhv name
do
  case $name in
    f) contextConfFile="$OPTARG" ;;
    g|c) contextName="$OPTARG" ;;
    m) [ -n "${specLines}" ] && specLines="${specLines}\n$OPTARG" || specLines="$OPTARG" ;;
    G) guiOpt="gui" ;;
    b) backgroundMode=1 ;;
    d) backgroundMode=0 ;;
    h) usage ;;
    v) version ;;
  esac
done
shift $(($OPTIND-1))

if [ -n "${specLines}" -a -n "${contextConfFile}" ] ; then
  usage "you must choose between a specification file (-f) and inline specifications (-m)"
fi

log "I will be managing the ${contextName} context"
[ ${backgroundMode} -eq 1 ] && log "Background mode activated : I will quit when my VMs are up."

trap 'stop_and_destroy_all' SIGINT SIGTERM
trap 'stop_and_keep_all' ${stopSignal}

vms=$(vm_running "${contextName}" "*" | cut -d ' ' -f 1 | xargs)
if [ -n "${vms}" ] ; then
  log "${contextName} is not empty !"
  for vm in ${vms} ; do
    log "${vm} is of $(vm_type ${vm}) type in $(vm_group ${vm}) context"
  done
fi

if [ -n "${contextConfFile}" ] ; then
  vms=$(run_from_spec ${contextConfFile})
  for vm in ${vms}
  do
    log "${vm} of $(vm_type ${vm}) type has been spawned in $(vm_group ${vm}) context"
  done
fi

if [ -n "${specLines}" ] ; then
  specFile=$(mktemp)
  echo -e "${specLines}" > ${specFile}
  vms=$(run_from_spec ${specFile})
  rm ${specFile}
  for vm in ${vms}
  do
    log "${vm} of $(vm_type ${vm}) type has been spawned in $(vm_group ${vm}) context"
  done
else
  contexts=$(ls ${vmBaseDir} | grep -v "${vmCreateGroup}")
  echo ${contexts} | tr ' ' '\n' | grep "^${contextName}$" >/dev/null || usage "${contextName} is no known context"
  types=$(ls ${vmBaseDir}/${contextName})
  [ -z "${types}" ] && usage "no type for context ${contextName}"
  for type in ${types}
  do
    for vmName in $(ls ${vmBaseDir}/${contextName}/${type})
    do
      vm_run ${vmName} ${contextName} ${type} none ${guiOpt}
      log "${vmName} of $(vm_type ${vmName}) type has been spawned in $(vm_group ${vmName}) context"
      vms="${vms} ${vmName}"
    done
  done
fi

vmsWithoutIp=${vms}
while [ -n "${vms}" ] ; do
  loopOperations=0
  if [ -n "${vmsWithoutIp}" ] ; then
    for vmWithoutIp in ${vmsWithoutIp} ; do
      ip=$(vm_running "${contextName}" "*" | grep ${vmWithoutIp} | cut -d ' ' -f 3 )
      if [ -n "${ip}" ] ; then
        log "${vmWithoutIp} has IP ${ip}"
        vmsWithoutIp=$(echo "${vmsWithoutIp}" | sed "s/ *${vmWithoutIp} */ /" | sed -r 's/^ *(.*) *$/\1/')
        log "${vmWithoutIp} has console socket $(vm_console_socket ${vmWithoutIp})"
        log "${vmWithoutIp} has spice port $(vm_spice_port ${vmWithoutIp})"
        loopOperations=$((loopOperations+1))
      fi
    done
  else
    if [ ${backgroundMode} -eq 1 ] ; then
      log "All of my machines are running."
      log "I quit."
      exit
    fi
  fi
  for vm in ${vms} ; do
    if [ -z "$(vm_running "${contextName}" "*" | grep ${vm})" ] ; then
      log "${vm} has vanished..."
      vms=$(echo "${vms}" | sed "s/ *${vm} */ /;s/^ *//;s/ *$//")
      loopOperations=$((loopOperations+1))
    fi
  done
  for vm in $(vm_running "${contextName}" "*" | cut -d ' ' -f 1) ; do
    if [ $(echo "${vms}" | tr -s ' ' '\n' | grep ${vm} | wc -l) -eq 0 ] ; then
      log "${vm} has joined the context from outer space."
      vms="${vms} ${vm}"
      vmsWithoutIp="${vmsWithoutIp} ${vm}"
      loopOperations=$((loopOperations+1))
    fi
  done
  [ ${loopOperations} -eq 0 ] && sleep 1
done

log "All of my machines have gone."
log "I quit."
